#!/bin/bash

cd $(readlink -f $(dirname "$0"))
CWD="$PWD"
DEST="$CWD/../src/rust/roxido/src/rbindings.rs"

function usage {
  >&2 echo "usage: $0 [ R*.tar.gz | R*.tar.xz ]"
  exit 1
}

if [[ $# -gt 1 ]]
then
  usage
fi

if [[ $# -eq 0 ]]
then
  SRC_TARBALL="R-latest.tar.xz"
  curl -o "$SRC_TARBALL" "https://cran.r-project.org/src/base/$SRC_TARBALL"
else
  SRC_TARBALL="$1"
fi

if [[ ! -e "$SRC_TARBALL" ]]
then
  usage
fi

SRC_DIR=$(tar tf $SRC_TARBALL | cut -d / -f 1 | uniq)
if [[ ! -e "$SRC_DIR" ]]
then
  rm -rf "$SRC_DIR"
  tar xf "$SRC_TARBALL"
  cd "$SRC_DIR"
  ./configure --disable-java --without-recommended-packages
  make
else
  echo "##"
  echo "## Warning: Using existing R source in $SRC_DIR"
  echo "##"
  cd "$SRC_DIR"
fi

cd src/include

cat <<EOT > $DEST
//! Automatically generated bindings for R's C API.
#![allow(improper_ctypes)]
#![allow(non_camel_case_types)]
#![allow(non_snake_case)]
#![allow(non_upper_case_globals)]
#![allow(clippy::all)]

/* automatically generated by bindings/make-bindings script in the https://github.com/roxido-framework/roxidoExample repository */

EOT

cargo install bindgen-cli

# Make sure that "clang" (A C language family front-end for LLVM) is installed.
bindgen $CWD/wrapper.h --blocklist-item FP_NAN --blocklist-item FP_INFINITE --blocklist-item FP_ZERO --blocklist-item FP_SUBNORMAL --blocklist-item FP_NORMAL -- -I. >> $DEST

echo "The file '$DEST' should have been updated."
